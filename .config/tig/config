set main-view = \
  id:width=4 \
  date \
  author \
  commit-title:graph=yes,refs=yes
set line-graphics = ascii
set vertical-split = false
set split-view-height = 90%
# set split-view-width = 80%
set diff-options = -m --first-parent
set diff-context = 4
set blame-view = \
  date:default \
  author:abbreviated \
  id:yes,color \
  line-number:yes,interval=5 \
  text

set refresh-mode = after-command
set mouse = true
set mouse-scroll = 3
# set diff-highlight = true

# c で checkout
bind main c ?git checkout %(branch)
bind refs c ?git checkout %(branch)

# D でoriginブランチ削除
bind refs D ?git branch -r -D origin/%(branch)

# H で reset --hard
bind main    H      ?git reset --hard %(commit)
bind diff    H      ?git reset --hard %(commit)
bind refs    H      ?git reset --hard %(branch)
# H で reset --hard HEAD (status-view)
bind status  H      ?git reset --hard HEAD

# . で HEAD との diff
bind main    .      !sh -c "git diff %(commit) | tig"
bind diff    .      !sh -c "git diff %(commit) | tig"
bind refs    .      !sh -c "git diff %(branch) | tig"

