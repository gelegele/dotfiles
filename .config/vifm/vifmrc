" VIFM Config

" show dotfiles
set dotfiles
" show auto preview
set quickview
" Editor
set vicmd=nvim
" Automatically resolve symbolic links on l or Enter.
set nofollowlinks
" show list of matches on tab complition in command-line mode
set wildmenu
" use popup window instead of a single line for completion
set wildstyle=popup
" status line
set timefmt=" %Y/%m/%d %H:%M:%S"
set statusline="    %A %u:%g %s %d %t %=%{&sort} "

" viewer
fileviewer */ ls -AlFhog --time-style=long-iso --color=auto %c
fileviewer .*/ ls -AlFhog --time-style=long-iso --color=auto %c
fileviewer * less %f

colorscheme my-nord

noremap q :q<CR>
noremap s :sort<CR>
noremap a :touch<Space>
noremap A :mkdir<Space>
noremap r :rename<Space>
noremap ZZ :shell<CR>
" to switch the active panel for nomal mode and view mode.
noremap <Space> <C-w><C-w>
qnoremap <Space> <C-w><C-w>
qnoremap w <C-w><C-w>
" toggle view mode
noremap w :view<CR>

" show icons
source ~/.config/vifm/favicons.vifm

